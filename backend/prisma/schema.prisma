generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  remoteJid String
  fromMe    Boolean  @default(false)
  body      String
  createdAt DateTime @default(now())

  @@index([remoteJid, createdAt])
}
